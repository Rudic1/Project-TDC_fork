<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDC.Views.Login.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20">
        <Label Text="Benutzername:" />
        <Entry x:Name="UsernameEntry" Placeholder="Benutzername eingeben" Margin="0,0,0,10"/>

        <Label Text="Passwort:" />
        <Entry x:Name="PasswordEntry" Placeholder="Passwort eingeben" IsPassword="True" Margin="0,0,0,20" />

        <Button Text="Login" Clicked="LoginButton_Clicked" />
        <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False"/>

    </VerticalStackLayout>
</ContentPage>